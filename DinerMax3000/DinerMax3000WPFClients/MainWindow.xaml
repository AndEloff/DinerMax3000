<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WPFClients="clr-namespace:DinerMax3000.WPFClients" x:Class="DinerMax3000WPFClients.MainWindow"
        Title="Diner Max 3000" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <WPFClients:DinerMax3000ViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <ComboBox Name="cboAllMenus" SelectedItem="{Binding SelectedMenu}" ItemsSource="{Binding AllMenus}" DisplayMemberPath="Name"/>
            <DataGrid CanUserAddRows="True" ItemsSource="{Binding SelectedMenu.items}" RowEditEnding="DataGrid_RowEditEnding" />
            <WrapPanel>
                <Label>Title</Label>
                <TextBox Width="150" Text="{Binding NewMenuItem.Title}"></TextBox>
                <Label>Price</Label>
                <TextBox Width="150" Text="{Binding NewMenuItem.Price}"></TextBox>
                
            </WrapPanel>
            <Label>Description</Label>
            <TextBox Text="{Binding NewMenuItem.Description}"></TextBox>
            <Button Click="Button_Click">Save a new menu item</Button>
        </StackPanel>
    </Grid>
</Window>
